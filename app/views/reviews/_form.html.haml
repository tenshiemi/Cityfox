%h1=@company.name
= form_for @review  do |f|
  = f.hidden_field :user_id, value: current_user.id
  = f.hidden_field :company_id, value: @company.id
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  %h3 Are payments delivered in accordance with the contract?
  .span.star-rating
    = f.radio_button :rating_payment, 1, id: "rating_payment_1"
    %i
    = f.radio_button :rating_payment, 2, id: "rating_payment_2"
    %i
    = f.radio_button :rating_payment, 3, id: "rating_payment_3"
    %i
    = f.radio_button :rating_payment, 4, id: "rating_payment_4"
    %i
    = f.radio_button :rating_payment, 5, id: "rating_payment_5"
    %i
  %h3 Communication
  .span.star-rating
    = f.radio_button :rating_communication, 1, id: "rating_communication_1"
    %i
    = f.radio_button :rating_communication, 2, id: "rating_communication_2"
    %i
    = f.radio_button :rating_communication, 3, id: "rating_communication_3"
    %i
    = f.radio_button :rating_communication, 4, id: "rating_communication_4"
    %i
    = f.radio_button :rating_communication, 5, id: "rating_communication_5"
    %i
  %h3 Expectations
  .span.star-rating
    = f.radio_button :rating_expectations, 1, id: "rating_expectations_1"
    %i
    = f.radio_button :rating_expectations, 2, id: "rating_expectations_2"
    %i
    = f.radio_button :rating_expectations, 3, id: "rating_expectations_3"
    %i
    = f.radio_button :rating_expectations, 4, id: "rating_expectations_4"
    %i
    = f.radio_button :rating_expectations, 5, id: "rating_expectations_5"
    %i
  .field
    %h3 Would you work with them again?
    = f.label "No"
    = f.radio_button :would_work_with, false
    = f.label "Yes"
    = f.radio_button :would_work_with, true
  .actions
    = f.submit "Submit"
