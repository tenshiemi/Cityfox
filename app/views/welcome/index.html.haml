.fullscreen.background.hero
	%header.header--welcome
		.container
			%nav.nav--site
				.navbar-left
					%h1
						#logo= link_to "FourthWall", root_path
				- if !flash[:notice].nil?
					.messages--flash
						%p#notice
							= flash[:notice]
				- if !flash[:alert].nil?
					.messages--flash
						%p#alert
							= flash[:alert]
				.navbar-right
					%ul
						- if current_user
							%li
								= link_to current_user.name, user_path(current_user.id), class: "button--medium"
							%li
								= link_to "Log out", :logout, method: :post, class: "button--medium"
							- if is_admin?
								%li
									= link_to "Companies", :companies
									\|
									= link_to "Owners", :manage_owners
									\|
									= link_to "Flagged", :flagged_reviews
						- else
							%li
								= link_to "Register", new_user_path, class: "button--medium"
							%li
								= link_to "Log in", :login, class: "button--medium"
	.container
		.content--hero
			%h1 Unsure about a new client?
			%h1 We've got your back.
			.search
				= form_tag search_path, :method => :post do
					= search_field_tag :search_term, nil, :placeholder => 'Find a company...', :autocomplete => "off"
			.search_field
				%ul#search_auto
			%h3 Reviews for freelancers, design and development shops, 
			%h3 and anyone who does client work.
			%h3= link_to "View All", companies_path, class: "link--hero"
.section--welcome--yellow	
	.content--center--medium
		.content--welcome--1-3
			%span.users-icon
		.content--welcome--2-3
			%h2 It has probably happened to you. You take on a project from a client you've never worked for before. You work your ass off, meet your deadline, but your client can't pay you just yet. 
.section--welcome--blue	
	.content--center--medium
		.content--welcome--2-3
			%h2 FourthWall provides a safe place to share your personal experiences working with clients. Your personal information is always confidential.
		.content--welcome--1-3
			%span.lock-icon