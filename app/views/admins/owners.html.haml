= render "layouts/header"
.container
	%table
		%thead
			%tr
				%th Company
				%th Contact Name
				%th Email
				%th Phone
				%th Status
		%tbody
			- @owners.each do |owner|
				%tr
					- cache(owner) do
						%td= link_to owner.company.name, company_path(owner.company.id)
						%td= link_to owner.name, owner_path(owner)
						%td= owner.email
						%td
							- if owner.phone
								= owner.phone
						- if owner.role == :unverified_owner
							%td= link_to "Unverified", verify_owner_path(owner)
						- else
							%td Verified
