= form_for @company do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name, required: true
  .field
    = f.label :industry
    %br
    = f.text_field :industry, required: true
  .field
    = f.label :country
    %br
    = f.country_select :country, ["United States", "Spain"], required: true
  .field
    = f.label :city
    %br
    = f.text_field :city, required: true
  .field
    .form-inline
      = f.label :state
      %br
      = f.select(:state, options_for_select(us_states), :include_blank => true)
    .form-inline
      = f.label :postal_code
      %br
      = f.text_field :postal_code, class: "small"
  .field
    %p For best results, logo should be 100px by 100px
    = f.label :logo
    = f.file_field :logo
  .actions
    = f.submit 'Save'


