%header
	.container
		%nav
			.navbar-left
				%h1
					#logo=link_to "City Fox", root_path
			.navbar-right
				%ul
					- if current_user
						%li.medium-button
							=link_to "Edit Profile", edit_user_path(current_user.id)
						%li.medium-button
							=link_to "Logout", :logout, method: :post
					- else
						%li.medium-button
							=link_to "Register", new_user_path
						%li.medium-button
							=link_to "Login", :login